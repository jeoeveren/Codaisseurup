<!-- Booking Form -->
<%= form_for [@event, @event.bookings.new] do |f| %>
  <p><strong>Nightly Price:</strong> <span>â‚¬</span> <%= @event.price %></p>

  <hr>

  <div class="form-group">
    <label>Check In:</label>
    <%= f.date_select :starts_at %>
  </div>

  <div class="form-group">
    <label>Check Out:</label>
    <%= f.date_select :ends_at %>
  </div>

  <%= f.hidden_field :event_id, value: @event.id %>
  <%= f.hidden_field :price, value: @event.price %>

  <hr>

  <div class="actions">
    <%= f.submit "Book Now", class: "btn btn-success" %>
  </div>
<% end %>
